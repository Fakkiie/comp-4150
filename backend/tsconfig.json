{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // turn these OFF so TS stops complaining about ESM syntax in CJS files
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  }
}
